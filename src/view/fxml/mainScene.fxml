<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.synthsgw.controller.SceneController">
   <top>
      <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <Menu mnemonicParsing="false" text="New">
                          <items>
                            <MenuItem mnemonicParsing="false" text="New Project" />
                              <MenuItem mnemonicParsing="false" onAction="#newBeat" text="New Beat" />
                              <MenuItem mnemonicParsing="false" text="New Synth" />
                          </items>
                        </Menu>
                    <MenuItem fx:id="close" mnemonicParsing="false" onAction="#close" text="Close File" />
                        <Menu mnemonicParsing="false" text="Open">
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#openMIDI" text="Open Midi" />
                            <MenuItem fx:id="openMP3" mnemonicParsing="false" onAction="#openMP3" text="Open MP3" />
                          </items>
                        </Menu>
                  </items>
                </Menu>
                <Menu fx:id="edit" mnemonicParsing="false" text="Edit">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#editSynth" text="Edit Synth" />
                        <MenuItem mnemonicParsing="false" onAction="#editBeat" text="Edit Beat" />
                    <MenuItem mnemonicParsing="false" text="Delete" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#openMetronome" text="Metronome" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#openSettings" text="Settings" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#goToGithub" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar fx:id="audio_tool_bar" prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button mnemonicParsing="false" onAction="#play" text="Play" />
                  <Button mnemonicParsing="false" onAction="#pause" text="Pause" />
                  <Button mnemonicParsing="false" onAction="#stop" text="Stop" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <bottom>
      <ToolBar prefHeight="22.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <items>
            <Label text="Some kind of status" />
         </items>
      </ToolBar>
   </bottom>
   <left>
      <Accordion maxWidth="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER">
        <panes>
          <TitledPane animated="false" text="Percussion">
               <content>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="200.0" vbarPolicy="ALWAYS">
                     <content>
                        <VBox fx:id="percussionEnumPane" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                  </ScrollPane>
               </content>
          </TitledPane>
          <TitledPane animated="false" text="Synthesizers">
               <content>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="200.0" vbarPolicy="ALWAYS">
                     <content>
                        <VBox fx:id="synthEnumPane" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                  </ScrollPane>
               </content>
          </TitledPane>
        </panes>
      </Accordion>
   </left>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="701.0" prefWidth="778.0" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="instrumentPane" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: lightblue;" />
         </content>
      </ScrollPane>
   </center>
